<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.css" rel="stylesheet" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.js"></script>
    <title>My Todo</title>
</head>
<body>
    <div class="container col-lg-6 mx-auto">
        <h1 class="text-center">My Todo</h1>

        <form action="/details" method="post">
            <div class="mb-3">
                <input type="text" placeholder="Add what to do" name="item" class="form-control" />
            </div>
            <div class="mb-3">
                <input type="text" placeholder="Time" name="time" class="form-control" />
            </div>
            <div class="mb-3">
                <input type="text" placeholder="Date" name="date" class="form-control" />
            </div>
            <button class="btn btn-success w-100" type="submit">
                Add
            </button>
        </form>
    </div>

    
    <div class="container-fluid col-lg-9 mx-auto mt-lg-5">
        <div class="row p-1">
            <% for( let index=0; index < userTodo.length; index++ ) { %>
                <div class="col-3">
                    <div class="card" style="width: 14rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                              Item:  <%= userTodo[index].item %>
                            </h5>
                            <h6 class="card-subtitle mb-2">
                               Time: <%= userTodo[index].time %>
                            </h6>
                            <h6 class="card-text">
                               Date: <%= userTodo[index].date %>
                            </h6>
                           
                            <div class="d-flex">
                                <form action="/delete" method="post">
                                    <input value="<%= userTodo[index].item %>" type="hidden" name="todoEdit" />
                                    <button class="btn btn-danger mx-1">Delete</button>
                                </form>
                                <form action="/edit" method="post">
                                    <input type="hidden" value="<%= userTodo[index].item %>" name="todoEdit" />
                                    <button class="btn btn-success">Edit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

</body>
</html>